{
  "compilerOptions": {
    "target": "es2016",  
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "outDir": "./dist",
    "rootDir": "./",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
     "noImplicitAny": false,
  },
  
  "exclude": ["node_modules"],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "node",
    "express"
  ],
}